<%- include('includes/start.ejs') %>
<link rel="stylesheet" href="/css/auth.css">
<link rel="stylesheet" href="/css/productForm.css">
</head>
<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <% if(errorMessage) {%>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% }%>  
        
        <div class="add-product-container">
        <form class="add-product-form"  action="/editProduct" method="post" enctype="multipart/form-data">
            <h2>Edit Product</h2>
            <div class="form-group">
                <i class="fas fa-tag"></i>
                <input type="text" name="title" id="title"  value="<%= oldInput.title %>" placeholder="Product Title"> 
            </div>
            <div class="form-group">
                <i class="fas fa-dollar-sign"></i>
                <input type="number" name="price" id="price"  value="<%= oldInput.price %>" placeholder="Price ($)"> 
            </div>
            <div class="form-group">
                <i class="fas fa-camera"></i> 
                <input type="file" name="image" id="image"> 
            </div>
            <div class="form-group">
                <i class="fas fa-percent"></i>
                <input type="number" name="discount" id="discount"  value="<%= oldInput.discount %>" placeholder="Discount (%)"> 
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="productId" value="<%= oldInput._id %>">
            <button type="submit" class="add-product-button">
                <i class="fas fa-plus-circle"></i>
            Edit product</button>
        </form>
    </div>
    </main>
<%- include('includes/end.ejs') %>